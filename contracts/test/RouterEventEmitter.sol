            abi.encodeWithSelector(
                IuShibaSwapRouter(router).swapTokensForExactTokens.selector,
                amountOut,
                amountInMax,
                path,
                to,
                deadline
            )
        );
        assert(success);
        emit Amounts(abi.decode(returnData, (uint256[])));
    }

    function swapExactBNBForTokens(
        address router,
        uint256 amountOutMin,
