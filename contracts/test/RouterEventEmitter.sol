            abi.encodeWithSelector(
                IuShibaSwapRouter(router).swapExactBNBForTokens.selector,
                amountOutMin,
                path,
                to,
                deadline
            )
        );
        assert(success);
        emit Amounts(abi.decode(returnData, (uint256[])));
    }

    function swapTokensForExactBNB(
        address router,
        uint256 amountOut,
        uint256 amountInMax,
